<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>


    <parent>
        <groupId>org.incode</groupId>
        <artifactId>platform</artifactId>
        <version>1.0-SNAPSHOT</version>
        <relativePath>../../pom.xml</relativePath>
    </parent>

    <artifactId>platform-example-appdefn</artifactId>
    <name>Incode QuickStart Ex Usage: App Definition</name>

    <description>Extends the quickstart application (manifest) with example module</description>

    <properties>
        <maven-checkstyle-plugin.configLocation>${project.parent.basedir}/_checks/checkstyle.xml</maven-checkstyle-plugin.configLocation>
        <maven-pmd-plugin.ruleset>${project.parent.basedir}/_checks/pmd.xml</maven-pmd-plugin.ruleset>
    </properties>

    <build>
        <resources>
            <resource>
                <filtering>false</filtering>
                <directory>src/main/resources</directory>
            </resource>
            <resource>
                <filtering>false</filtering>
                <directory>src/main/java</directory>
                <includes>
                    <include>**</include>
                </includes>
                <excludes>
                    <exclude>**/*.java</exclude>
                </excludes>
            </resource>
        </resources>
        <plugins>
            <plugin>
                <groupId>com.github.odavid.maven.plugins</groupId>
                <artifactId>mixin-maven-plugin</artifactId>
                <version>0.1-alpha-39</version>
                <extensions>true</extensions>
                <configuration>
                    <mixins>
                        <mixin>
                            <groupId>com.danhaywood.mavenmixin</groupId>
                            <artifactId>standard</artifactId>
                        </mixin>
                    </mixins>
                </configuration>
            </plugin>
        </plugins>
    </build>

    <dependencies>
        <dependency>
            <groupId>org.apache.isis.core</groupId>
            <artifactId>isis-core-applib</artifactId>
        </dependency>

        <dependency>
			<groupId>${project.groupId}</groupId>
			<artifactId>platform-appdefn</artifactId>
        </dependency>

        <dependency>
            <groupId>${project.groupId}</groupId>
            <artifactId>platform-example-dom</artifactId>
        </dependency>


        <dependency>
            <groupId>org.isisaddons.module.fakedata</groupId>
            <artifactId>isis-module-fakedata-dom</artifactId>
        </dependency>

        <dependency>
            <groupId>org.incode.module.fixturesupport</groupId>
            <artifactId>incode-module-fixturesupport-dom</artifactId>
        </dependency>

        <dependency>
            <groupId>org.apache.isis.mavendeps</groupId>
            <artifactId>isis-mavendeps-testing</artifactId>
            <type>pom</type>
            <scope>test</scope>
        </dependency>

        <dependency>
            <groupId>org.hsqldb</groupId>
            <artifactId>hsqldb</artifactId>
        </dependency>

        <dependency>
            <groupId>org.axonframework</groupId>
            <artifactId>axon-core</artifactId>
        </dependency>

        <dependency>
            <groupId>org.projectlombok</groupId>
            <artifactId>lombok</artifactId>
            <scope>provided</scope>
        </dependency>

    </dependencies>

    <profiles>
        <profile>
            <id>spi-audit</id>
            <activation>
                <property>
                    <name>!skip.spi-audit</name>
                </property>
            </activation>
            <dependencies>
                <dependency>
                    <groupId>org.isisaddons.module.audit</groupId>
                    <artifactId>isis-module-audit-dom</artifactId>
                    <!-- to avoid cluttering the classpath -->
                    <optional>true</optional>
                </dependency>
            </dependencies>
        </profile>
        <profile>
            <id>spi-command</id>
            <activation>
                <property>
                    <name>!skip.spi-command</name>
                </property>
            </activation>
            <dependencies>
                <dependency>
                    <groupId>org.isisaddons.module.command</groupId>
                    <artifactId>isis-module-command-dom</artifactId>
                    <!-- to avoid cluttering the classpath -->
                    <optional>true</optional>
                </dependency>
            </dependencies>
        </profile>
        <profile>
            <id>spi-publishmq</id>
            <activation>
                <property>
                    <name>!skip.spi-publishmq</name>
                </property>
            </activation>
            <dependencies>
                <dependency>
                    <groupId>${project.groupId}</groupId>
                    <artifactId>platform-example-canonical</artifactId>
                </dependency>
                <dependency>
                    <groupId>org.isisaddons.module.publishmq</groupId>
                    <artifactId>isis-module-publishmq-dom-jdo</artifactId>
                    <!-- to avoid cluttering the classpath -->
                    <optional>true</optional>
                </dependency>
            </dependencies>
        </profile>
        <profile>
            <id>spi-security</id>
            <activation>
                <property>
                    <name>!skip.spi-security</name>
                </property>
            </activation>
            <dependencies>
                <dependency>
                    <groupId>org.isisaddons.module.security</groupId>
                    <artifactId>isis-module-security-dom</artifactId>
                    <!-- to avoid cluttering the classpath -->
                    <optional>true</optional>
                </dependency>
            </dependencies>
        </profile>
        <profile>
            <id>spi-sessionlogger</id>
            <activation>
                <property>
                    <name>!skip.spi-sessionlogger</name>
                </property>
            </activation>
            <dependencies>
                <dependency>
                    <groupId>org.isisaddons.module.sessionlogger</groupId>
                    <artifactId>isis-module-sessionlogger-dom</artifactId>
                    <!-- to avoid cluttering the classpath -->
                    <optional>true</optional>
                </dependency>
            </dependencies>
        </profile>
        <profile>
            <id>wicket-pdfjs</id>
            <activation>
                <property>
                    <name>!skip.wicket-pdfjs</name>
                </property>
            </activation>
            <dependencies>
                <dependency>
                    <groupId>org.isisaddons.wicket.pdfjs</groupId>
                    <artifactId>isis-wicket-pdfjs-cpt</artifactId>
                    <!-- to avoid cluttering the classpath -->
                    <optional>true</optional>
                </dependency>
            </dependencies>
        </profile>
    </profiles>

</project>
